{

    "manifest_version": 2,
    "name": "emoji-picker",
    "version": "1.0",
  
    "description": "An wide ranged emoji picker extension for firefox based browsers.",
  
    
    "permissions": ["menus", "tabs", "<all_urls>"],

    "web_accessible_resources": ["window/emoji.json","window/style.css"],

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "all_frames": true,
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
  
  }
